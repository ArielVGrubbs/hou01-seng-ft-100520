<h1> Login here </h1>

<% if flash[:errors] %>
  <div style='color: red'>
    <h1>An error occured!</h1>
    <ul>
      <% flash[:errors].each do |err| %>
        <li> <%= err %> </li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with url: sessions_path do |f| %>
  Username: <%= f.text_field :name %> <br /><br />
  Password: <%= f.password_field :password %><br /><br />
  <%= f.submit "Login" %>
<% end %>
