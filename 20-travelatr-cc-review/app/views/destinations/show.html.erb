<h1> <%= @destination.name %> </h1>

<h3> Recent 5 Posts: </h3>
<% if @recent_five %>
  <ul>
    <% @recent_five.each do |post| %>
      <li>
        <%= post.title %>
      </li>
    <% end %>
  </ul>
<% end %>

<h3> Featured Post: </h3>
<% if @featured_post %>
  <%= link_to @featured_post.title, "/posts/#{@featured_post.id}" %>
<% else %>
  <p> This destination has no posts yet! </p>
<% end %>

<h3> Average Age: </h3>
<p> <%= @average_age %></p>
